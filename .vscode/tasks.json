{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run",
            "type": "shell",
            "command": "java -jar JJBMC.jar -tr -c -timeout=1800000 \"${input:file}.java\" ${input:function}",
            "problemMatcher": [],
            "runOptions": {
                "reevaluateOnRerun": false
            }
        },
        {
            "label": "RunDocker",
            "type": "shell",
            "command": "run.bat ${input:file} ${input:function}",
            "problemMatcher": [],
            "runOptions": {
                "reevaluateOnRerun": false
            }
        },
        {
            "label": "Recompile",
            "type": "shell",
            "command": "./gradlew fatJar",
            "problemMatcher": [],
            "runOptions": {
                "reevaluateOnRerun": false
            }
        },
        {
            "label": "Recompile and Run",
            "type": "shell",
            "command": "./gradlew fatJar && java -jar JJBMC.jar -tr -c -timeout=1800000 \"${input:file}.java\" ${input:function}",
            "problemMatcher": [],
            "runOptions": {
                "reevaluateOnRerun": false
            }
        }
    ],
    "inputs": [
        {
            "id": "file",
            "description": "File: ",
            "default": "bqs/BlockQuickSort",
            "type": "promptString"
        },
        {
            "id": "function",
            "description": "Function: ",
            "default": "",
            "type": "promptString"
        },
    ]
}